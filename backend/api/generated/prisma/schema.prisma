generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("SUPABASE_PRISMA_CLIENT_UR")
}

model Profile {
  userid     String  @id @db.Uuid
  email      String
  username   String
  first_name String?
  last_name  String?

  // A profile can have many questions attempted
  questions Question[]

  @@map("profiles")
}

model Question {
  user_id      String    @db.Uuid
  question_id  String
  status       String
  started_at   DateTime  @default(now()) @db.Timestamptz
  submitted_at DateTime? @db.Timestamptz

  user Profile @relation(fields: [user_id], references: [userid], onDelete: Cascade)

  @@id([user_id, question_id]) // composite primary key
  @@map("questions")
}
